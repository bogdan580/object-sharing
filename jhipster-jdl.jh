entity Advertisment {
  title String required,
  imageUrl String required,
  desc String,
  status ObjectStatus required
}
entity Article {
  name String required,
  desc String,
  status ObjectStatus required,
  addTime Long,
  price Double,
  mainImage String,
  rentPeriod RentPeriod,
  currency Currency
}
entity Category {
  categoryName String required
}
entity Image {
  url String required
}
/**
 * not an ignored comment
 */
entity Location {
  streetAddress String,
  postalCode String,
  city String,
  stateProvince String,
  lat Double required,
  lon Double required
}
entity Renting {
  startTime Long,
  endTime Long,
  price Integer,
  rentPeriod RentPeriod,
  currency Currency
}
entity Reservation {
  startTime String,
  endTime String
}
entity UserInfo {
  tel Integer,
  fullName String,
  avatar String, // todo delete because it is user.imageUrl
  providedObjects Integer,
  rentedObjects Integer
}
enum ObjectStatus {
  ACTIVE,
  DISACTIVE,
  RESERVED,
  INRENT
}
enum RentPeriod {
  HOUR,
  DAY
}
enum Currency {
  BEER,
  PLN,
  EUR,
  USD
}

relationship OneToOne {
  UserInfo{user(login)} to User
}
relationship OneToMany {
  Category{article} to Article{category(categoryName)}, // todo step2 add localization to article
  Article{image} to Image{article(name)},
  Article{renting} to Renting{article(name)},
  Article{reservation} to Reservation{article(name)}
}
relationship ManyToOne {
  Article{user(login)} to User, // todo add article to userInfo
  Location{user(login)} to User,
  Renting{user(login)} to User,
  Reservation{user(login)} to User
}

